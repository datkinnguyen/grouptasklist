<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/new_task_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/view_bottom"
                android:layout_alignParentTop="true">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/tv_task"
                    android:hint="@string/hint_task_name"
                    tools:text="Some text here"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/tv_notes"
                    android:hint="@string/hint_task_notes"
                    tools:text="Some text here"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <Button android:id="@+id/btn_deadline"
                        style="?android:attr/buttonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:text="Set Deadline"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/tv_deadline"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <Button android:id="@+id/btn_gps"
                        style="?android:attr/buttonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:text="Attach GPS"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/tv_gps"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <Button android:id="@+id/btn_image"
                        style="?android:attr/buttonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:text="Attach Image"/>

                <ImageView android:id="@+id/imv_image"
                           android:layout_height="300dp"
                           android:layout_width="match_parent"
                           android:scaleType="fitCenter"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:id="@+id/view_bottom"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="50dp"
                  android:layout_alignParentBottom="true"
                  android:gravity="center"
                  android:orientation="horizontal">

        <Button android:id="@+id/btn_cancel"
                style="?android:attr/buttonBarNegativeButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:textSize="16sp"
                android:clickable="true"
                android:text="@android:string/cancel"/>

        <Button android:id="@+id/btn_save"
                style="?android:attr/buttonBarPositiveButtonStyle"
                android:layout_width="wrap_content"
                android:minWidth="120dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:clickable="true"
                android:text="@string/save"/>

    </LinearLayout>


</RelativeLayout>