<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/new_task_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:minHeight="80dp"
                          android:padding="10dp"
                          android:orientation="horizontal">

                <ImageView android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:id="@+id/imv_completed"
                           android:paddingLeft="5dp"
                           android:paddingRight="5dp"
                           android:layout_gravity="center_vertical"
                           android:src="@drawable/ic_checkmark_empty"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:maxLength="100"
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp"
                        android:ems="10"
                        android:id="@+id/tv_task"
                        android:hint="@string/hint_task_name"
                        tools:text="Some text here"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="10dp"
                          android:id="@+id/view_add_due_date"
                          android:background="?attr/selectableItemBackground"
                          android:orientation="horizontal">

                <ImageView style="@style/TaskDetailImageView"
                           android:id="@+id/imv_due_date"
                           android:src="@drawable/ic_calendar"/>

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="3dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:minHeight="40dp"
                          android:text="@string/add_due_date"
                          android:textSize="16sp"
                          android:gravity="center_vertical"
                          android:id="@+id/tv_deadline"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="10dp"
                          android:id="@+id/view_add_location"
                          android:background="?attr/selectableItemBackground"
                          android:orientation="horizontal">

                <ImageView style="@style/TaskDetailImageView"
                           android:id="@+id/imv_add_location"
                           android:src="@drawable/ic_location"/>

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="3dp"
                          android:clickable="true"
                          android:focusable="true"
                          android:minHeight="40dp"
                          android:text="@string/add_location"
                          android:textSize="16sp"
                          android:gravity="center_vertical"
                          android:id="@+id/tv_gps"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="10dp"
                          android:id="@+id/view_add_image"
                          android:background="?attr/selectableItemBackground"
                          android:orientation="horizontal">

                <ImageView style="@style/TaskDetailImageView"
                           android:id="@+id/imv_add_image"
                           android:src="@drawable/ic_image"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginStart="3dp"
                              android:clickable="true"
                              android:focusable="true"
                              android:minHeight="40dp"
                              android:text="@string/add_an_image"
                              android:textSize="16sp"
                              android:gravity="center_vertical"
                              android:id="@+id/tv_add_image"/>

                    <ImageView android:id="@+id/imv_image"
                               android:layout_height="120dp"
                               android:layout_width="match_parent"
                               android:visibility="gone"
                               android:scaleType="fitStart"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="10dp"
                          android:orientation="horizontal">

                <ImageView style="@style/TaskDetailImageView"
                           android:id="@+id/imv_notes"
                           android:src="@drawable/ic_notes"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="3"
                        android:inputType="textMultiLine"
                        android:gravity="start|top"
                        android:ellipsize="end"
                        android:ems="10"
                        android:id="@+id/tv_notes"
                        android:hint="@string/hint_task_notes"
                        tools:text="Some notes here"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>